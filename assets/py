import tkinter as tk  
from tkinter import messagebox  

#   new user info----- 
def create_account():  
    global created_username, created_password  

    created_username = username_entry.get()  
    created_password = password_entry.get()  

    if created_username and created_password:   
        messagebox.showinfo("Account","‚úîÔ∏è " "Account Created Successfully!")  
        switch_to_login()  
    else:  
        messagebox.showerror("Error", "Please enter both a Username and a Password.")  


#  login interface---------------  
def switch_to_login():  
    # Clear previous widgets  
    for widget in root.winfo_children():  
        widget.destroy()  


    login_label = tk.Label(root, text="Login", bg='lightblue', font=("Arial", 16))  
    login_label.pack(pady=20)  

    # For Username...  
    global username_login_entry  
    username_login_label = tk.Label(root, text="Username:", bg='lightblue')  
    username_login_label.pack(pady=5)  
    username_login_entry = tk.Entry(root)  
    username_login_entry.pack(pady=5)  

    # For Password...  
    global password_login_entry  
    password_login_label = tk.Label(root, text="Password:", bg='lightblue')  
    password_login_label.pack(pady=5)  
    password_login_entry = tk.Entry(root, show="*")  
    password_login_entry.pack(pady=5)  

    # Login Button...  
    login_button = tk.Button(root, text="‚ñ∂Submit‚óÄ", command=login, bg='Medium Sea Green', fg='Black')  
    login_button.pack(pady=30)  

# Login Process-------

def login():   
    username = username_login_entry.get()  
    password = password_login_entry.get()  

    if username == created_username and password == created_password:  
        messagebox.showinfo("Login", "Login Successful!")   
        messagebox.showinfo("Welcome", "Welcome to Enhancing Digital Government and Economy (EDGE). ü§ñ")   
    else:  
        messagebox.showerror("Errorüò£", "Invalid Username or Password ü§®")  
        messagebox.showerror("Alertü´°", "Type your Authentic Username and Password üö®")  


# Design part-----------------------
#  main   
root = tk.Tk()  
root.title("User Login System")  
root.geometry("320x300")  
root.configure(bg='lightblue')  

#  Username....  
username_label = tk.Label(root, text="Create Username:", bg='lightblue')  
username_label.pack(pady=5)  
username_entry = tk.Entry(root)  
username_entry.pack(pady=5)  

#  Password....  
password_label = tk.Label(root, text="Create Password:", bg='lightblue')  
password_label.pack(pady=5)  
password_entry = tk.Entry(root, show="*")  
password_entry.pack(pady=5)  

# For Remember me ....
remember_var = tk.BooleanVar()  
remember_me_checkbox = tk.Checkbutton(root, text="Remember Me", variable=remember_var, bg='lightblue')  
remember_me_checkbox.pack(pady=5)

#  Account Button ..... 
create_account_button = tk.Button(root, text="Create Account", command=create_account, bg='Coral', fg='Black')  
create_account_button.pack(pady=20)  

root.mainloop()